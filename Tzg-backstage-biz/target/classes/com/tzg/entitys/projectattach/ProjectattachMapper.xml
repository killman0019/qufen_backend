<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tzg.entitys.projectattach.ProjectattachMapper">	
	<resultMap id="BaseResultMap" type="com.tzg.entitys.projectattach.Projectattach">
		<result property="id" jdbcType="INTEGER" column="id"/>
		<result property="iProjectID" jdbcType="INTEGER" column="iProjectID"/>
		<result property="vcFilePath" jdbcType="VARCHAR" column="vcFilePath"/>
		<result property="vcMobileFilePath" jdbcType="VARCHAR" column="vcMobileFilePath"/>		
		<result property="iSort" jdbcType="INTEGER" column="iSort"/> 
		<result property="iState" jdbcType="INTEGER" column="iState"/>
		<result property="iType" jdbcType="INTEGER" column="iType"/>		
    </resultMap>
	
	<sql id="columns">
	    <![CDATA[
        id ,iProjectID ,vcAttachName ,vcFilePath ,iSort ,iState ,iType
	    ]]>
	</sql>
	
	<insert id="save" parameterType="com.tzg.entitys.projectattach.Projectattach" useGeneratedKeys="true" keyProperty="id">
		<selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER" >
	      SELECT LAST_INSERT_ID() AS id
	    </selectKey>
	<![CDATA[
		INSERT INTO tbprojectattach (
        	iProjectID ,
        	vcAttachName ,
        	vcFilePath ,
        	iSort ,
        	iState ,
        	iType
		) VALUES (
        	#{iProjectID,jdbcType=INTEGER} ,
        	#{vcAttachName,jdbcType=VARCHAR} ,
        	#{vcFilePath,jdbcType=VARCHAR} ,
        	#{iSort,jdbcType=INTEGER} ,
        	#{iState,jdbcType=INTEGER} ,
        	#{iType,jdbcType=INTEGER}
		)
	]]>
	</insert>

	<update id="update" parameterType="com.tzg.entitys.projectattach.Projectattach">
		UPDATE tbprojectattach
		<set>
			<if test="iProjectID != null">
	        iProjectID = #{iProjectID,jdbcType=INTEGER} ,
	        </if>
			<if test="vcAttachName != null">
	        vcAttachName = #{vcAttachName,jdbcType=VARCHAR} ,
	        </if>
			<if test="vcFilePath != null">
	        vcFilePath = #{vcFilePath,jdbcType=VARCHAR} ,
	        </if>
			<if test="iType != null">
	        iType = #{iType,jdbcType=INTEGER} ,
	        </if>	        
			<if test="iSort != null">
	        iSort = #{iSort,jdbcType=INTEGER} ,
	        </if>
			<if test="iState != null">
	        iState = #{iState,jdbcType=INTEGER} 
	        </if>
	    </set>
		WHERE 
	        id = #{id,jdbcType=INTEGER} 
	</update>

	<delete id="deleteById" parameterType="java.lang.Integer">
	<![CDATA[
		DELETE FROM tbprojectattach WHERE
        id = #{id} 
	]]>
	</delete>
    
	<select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
	    SELECT <include refid="columns"/> 
	<![CDATA[
		FROM tbprojectattach 
		WHERE 
        id = #{id} 
	]]>
	</select>
	 
	<select id="findPageCount" resultType="java.lang.Integer" parameterType="java.util.Map">
    	select count(*) from tbprojectattach where 1=1
		<include refid="queryWhere"/>
	</select>
    
	<select id="findPage" resultMap="BaseResultMap" parameterType="java.util.Map">
		select <include refid="columns"/>  from tbprojectattach where 1=1
		<include refid="queryWhere"/> 
	    	<choose>
	            <when test="sortField != null and sortField != ''">
	               ORDER BY ${sortField} desc
	            </when>
	            <otherwise>
	                 ORDER BY id DESC 
	            </otherwise>
	        </choose>
        <![CDATA[ LIMIT ${startRecord},${endRecord} ]]>
	</select>
	
	<sql id="queryWhere">
		<if test="id != null and id.trim() != ''">
		and id = #{id}
		</if>
		<if test="iProjectID != null and iProjectID.trim() != ''">
		and iProjectID = #{iProjectID}
		</if>
		<if test="vcAttachName != null and vcAttachName.trim() != ''">
		and vcAttachName = #{vcAttachName}
		</if>
		<if test="vcFilePath != null and vcFilePath.trim() != ''">
		and vcFilePath = #{vcFilePath}
		</if>
		<if test="iType != null and iType.trim() != ''">
		and iType = #{iType}
		</if>		
		<if test="iSort != null and iSort.trim() != ''">
		and iSort = #{iSort}
		</if>
		<if test="iState != null and iState.trim() != ''">
		and iState = #{iState}
		</if>
	</sql>
	
	<select id="find" resultMap="BaseResultMap" parameterType="java.util.Map">
			select <include refid="columns"/>  from tbprojectattach where 1=1
			<include refid="queryWhere"/> 
			order by iType,iSort,id		
	</select>
	
	<!-- 根据项目编号，查询记录 -->
	<select id="queryInfoByProjectIDList" parameterType="java.util.Map" resultMap="BaseResultMap">
		select
		<include refid="columns"/>
		from tbprojectattach
		where iProjectID = #{iProjectID,jdbcType=INTEGER}
		AND iType = #{iType,jdbcType=INTEGER}
	</select>
	
	<delete id="deleteByProjectId" parameterType="java.lang.Integer">
	<![CDATA[
		DELETE FROM tbprojectattach WHERE
        iProjectID = #{iProjectID} 
	]]>
	</delete>
	
		<delete id="deleteByProjectIdAndType" parameterType="java.util.Map">
	<![CDATA[
		DELETE FROM tbprojectattach WHERE
        iProjectID = #{iProjectID}  and iType = #{iType}
	]]>
	</delete>
	
	
</mapper>


