<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tzg.entitys.cerifycataloglist.CerifycataloglistMapper">	
	<resultMap id="BaseResultMap" type="com.tzg.entitys.cerifycataloglist.Cerifycataloglist">
		<result property="id" jdbcType="INTEGER" column="id"/>
		<result property="iTypeID" jdbcType="INTEGER" column="iTypeID"/>
		<result property="vcName" jdbcType="VARCHAR" column="vcName"/>
		<result property="vcURL" jdbcType="VARCHAR" column="vcURL"/>
		<result property="iSort" jdbcType="INTEGER" column="iSort"/>
		<result property="iState" jdbcType="INTEGER" column="iState"/>
    </resultMap>
	
	<sql id="columns">
	    <![CDATA[
        id ,iTypeID ,vcName ,vcURL ,iSort ,iState
	    ]]>
	</sql>
	
	<insert id="save" parameterType="com.tzg.entitys.cerifycataloglist.Cerifycataloglist" useGeneratedKeys="true" keyProperty="id">
		<selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER" >
	      SELECT LAST_INSERT_ID() AS id
	    </selectKey>
	<![CDATA[
		INSERT INTO tbcerifycataloglist (
        	iTypeID ,
        	vcName ,
        	vcURL ,
        	iSort ,
        	iState
		) VALUES (
        	#{iTypeID,jdbcType=INTEGER} ,
        	#{vcName,jdbcType=VARCHAR} ,
        	#{vcURL,jdbcType=VARCHAR} ,
        	#{iSort,jdbcType=INTEGER} ,
        	#{iState,jdbcType=INTEGER}
		)
	]]>
	</insert>

	<update id="update" parameterType="com.tzg.entitys.cerifycataloglist.Cerifycataloglist">
		UPDATE tbcerifycataloglist
		<set>
			<if test="iTypeID != null">
	        iTypeID = #{iTypeID,jdbcType=INTEGER} ,
	        </if>
			<if test="vcName != null">
	        vcName = #{vcName,jdbcType=VARCHAR} ,
	        </if>
			<if test="vcURL != null">
	        vcURL = #{vcURL,jdbcType=VARCHAR} ,
	        </if>
			<if test="iSort != null">
	        iSort = #{iSort,jdbcType=INTEGER} ,
	        </if>
			<if test="iState != null">
	        iState = #{iState,jdbcType=INTEGER}
	        </if>
	    </set>
		WHERE 
	        id = #{id,jdbcType=INTEGER} 
	</update>

	<delete id="deleteById" parameterType="java.lang.Integer">
	<![CDATA[
		DELETE FROM tbcerifycataloglist WHERE
        id = #{id} 
	]]>
	</delete>
    
	<select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
	    SELECT <include refid="columns"/> 
	<![CDATA[
		FROM tbcerifycataloglist 
		WHERE 
        id = #{id} 
	]]>
	</select>
	 
	<select id="findPageCount" resultType="java.lang.Integer" parameterType="java.util.Map">
    	select count(*) from tbcerifycataloglist where 1=1
		<include refid="queryWhere"/>
	</select>
    
	<select id="findPage" resultMap="BaseResultMap" parameterType="java.util.Map">
		select <include refid="columns"/>  from tbcerifycataloglist where 1=1
		<include refid="queryWhere"/> 
	    <![CDATA[ ORDER BY iTypeID ASC ]]>
        <![CDATA[ LIMIT ${startRecord},${endRecord} ]]>
	</select>
	
	<sql id="queryWhere">
		<if test="id != null and id.trim() != ''">
		and id = #{id}
		</if>
		<if test="iTypeID != null and iTypeID.trim() != ''">
		and iTypeID = #{iTypeID}
		</if>
		<if test="vcName != null and vcName.trim() != ''">
		and vcName = #{vcName}
		</if>
		<if test="vcURL != null and vcURL.trim() != ''">
		and vcURL = #{vcURL}
		</if>
		<if test="iSort != null and iSort.trim() != ''">
		and iSort = #{iSort}
		</if>
		<if test="iState != null and iState.trim() != ''">
		and iState = #{iState}
		</if>
	</sql>
	
	<!-- 根据目录类型，查询目录信息 -->
	<select id="queryCatalogNameByTypeList" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select
			<include refid="columns"/>
		from tbcerifycataloglist
		where iState = 1
			  and iTypeID = #{iTypeID,jdbcType=INTEGER}
	</select>
	
	<select id="querytbCerifyCatalogByStateList" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select 
		<include refid="columns"/>
		from tbcerifycataloglist
		where iState = #{iState,jdbcType=INTEGER}
		order by iTypeID,iSort
	</select>
	
</mapper>


