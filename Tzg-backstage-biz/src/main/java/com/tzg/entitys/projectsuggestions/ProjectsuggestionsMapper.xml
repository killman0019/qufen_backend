<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tzg.entitys.projectsuggestions.ProjectsuggestionsMapper">	
	<resultMap id="BaseResultMap" type="com.tzg.entitys.projectsuggestions.Projectsuggestions">
		<result property="id" jdbcType="INTEGER" column="id"/>
		<result property="iProjectID" jdbcType="INTEGER" column="iProjectID"/>
		<result property="vcOpinionGuarantee" jdbcType="VARCHAR" column="vcOpinionGuarantee"/>
		<result property="vcOpinionControl" jdbcType="VARCHAR" column="vcOpinionControl"/>
		<result property="vcOpinionLawyer" jdbcType="VARCHAR" column="vcOpinionLawyer"/>
    </resultMap>
	
	<sql id="columns">
	    <![CDATA[
        id ,iProjectID ,vcOpinionGuarantee ,vcOpinionControl ,vcOpinionLawyer 
	    ]]>
	</sql>
	
	<insert id="save" parameterType="com.tzg.entitys.projectsuggestions.Projectsuggestions" useGeneratedKeys="true" keyProperty="id">
		<selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER" >
	      SELECT LAST_INSERT_ID() AS id
	    </selectKey>
	<![CDATA[
		INSERT INTO tbprojectsuggestions (
        	iProjectID ,
        	vcOpinionGuarantee ,
        	vcOpinionControl ,
        	vcOpinionLawyer 
		) VALUES (
        	#{iProjectID,jdbcType=INTEGER} ,
        	#{vcOpinionGuarantee,jdbcType=VARCHAR} ,
        	#{vcOpinionControl,jdbcType=VARCHAR} ,
        	#{vcOpinionLawyer,jdbcType=VARCHAR} 
		)
	]]>
	</insert>

	<update id="update" parameterType="com.tzg.entitys.projectsuggestions.Projectsuggestions">
		UPDATE tbprojectsuggestions
		<set>
			<if test="iProjectID != null">
	        iProjectID = #{iProjectID,jdbcType=INTEGER} ,
	        </if>
			<if test="vcOpinionGuarantee != null">
	        vcOpinionGuarantee = #{vcOpinionGuarantee,jdbcType=VARCHAR} ,
	        </if>
			<if test="vcOpinionControl != null">
	        vcOpinionControl = #{vcOpinionControl,jdbcType=VARCHAR} ,
	        </if>
			<if test="vcOpinionLawyer != null">
	        vcOpinionLawyer = #{vcOpinionLawyer,jdbcType=VARCHAR} 
	        </if>
	    </set>
		WHERE 
	        id = #{id,jdbcType=INTEGER} 
	</update>

	<delete id="deleteById" parameterType="java.lang.Integer">
	<![CDATA[
		DELETE FROM tbprojectsuggestions WHERE
        id = #{id} 
	]]>
	</delete>
    
	<select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
	    SELECT <include refid="columns"/> 
	<![CDATA[
		FROM tbprojectsuggestions 
		WHERE 
        id = #{id} 
	]]>
	</select>
	 
	<select id="findPageCount" resultType="java.lang.Integer" parameterType="java.util.Map">
    	select count(*) from tbprojectsuggestions where 1=1
		<include refid="queryWhere"/>
	</select>
    
	<select id="findPage" resultMap="BaseResultMap" parameterType="java.util.Map">
		select <include refid="columns"/>  from tbprojectsuggestions where 1=1
		<include refid="queryWhere"/> 
	    <![CDATA[ ORDER BY id DESC ]]>
        <![CDATA[ LIMIT ${startRecord},${endRecord} ]]>
	</select>
	
	<sql id="queryWhere">
		<if test="id != null and id.trim() != ''">
		and id = #{id}
		</if>
		<if test="iProjectID != null and iProjectID.trim() != ''">
		and iProjectID = #{iProjectID}
		</if>
		<if test="vcOpinionGuarantee != null and vcOpinionGuarantee.trim() != ''">
		and vcOpinionGuarantee = #{vcOpinionGuarantee}
		</if>
		<if test="vcOpinionControl != null and vcOpinionControl.trim() != ''">
		and vcOpinionControl = #{vcOpinionControl}
		</if>
		<if test="vcOpinionLawyer != null and vcOpinionLawyer.trim() != ''">
		and vcOpinionLawyer = #{vcOpinionLawyer}
		</if>
	</sql>
	
	<!-- 根据项目编号，查询记录 -->
	<select id="queryInfoByProjectID" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select 
		<include refid="columns"/>
		from tbprojectsuggestions
		where iProjectID = #{iProjectID,jdbcType=INTEGER}
	</select>
	
	
</mapper>


