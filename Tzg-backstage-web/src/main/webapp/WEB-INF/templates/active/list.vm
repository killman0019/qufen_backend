<script src="${www}/js/my97DatePicker/WdatePicker.js"></script>
<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li class="active">活动列表</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>
	<div class="page-content">
		<div class="page-header">
		    <h1>活动列表</h1>
		</div>
		<div class="container-fluid">
		    <div class="dataTables_wrapper">
		        <div class="row">
		            <div class="col-sm-11">
		                <form class="form-inline" role="form">
		                    <div class="form-group">
		                        <label>名称：</label>
		                        <input type="text" name="vcName" value="$!{query.vcName}">
		                    </div>
							状态:
							 <select name="istate">
	                        		<option value="">全部</option>
		                            <option value="1" #if($query.istate ==1) selected #end>进行中</option>
		                            <option value="2" #if($query.istate ==2) selected #end>结束</option>
		                        </select>
							<div class="form-group">
		                        <label>时间：</label>
		                        <input type="text" name="dtbeginStr" value="$!{query.dtbeginStr}" id="dtbeginStr" onFocus="WdatePicker({lang:'zh-cn'})" class="input-date">
		                    </div>
							<div class="form-group">
		                        <label>-</label>
		                        <input type="text" name="dtendStr" value="$!{query.dtendStr}"  id="dtendStr" onFocus="WdatePicker({lang:'zh-cn'})" class="input-date">
		                    </div>
		                    <div class="form-group">
		                        <button class="btn btn-xs btn-primary" type="submit">查询</button>
		                    </div>
		                </form>
		            </div>
                   <!-- <div class="col-sm-1">
                        <a href="$!{www}/active/new" class="btn btn-success btn-xs">添加</a>
					</div>-->
		        </div>
		        <table class="table table-striped table-bordered table-hover dataTable">
		            <thead>
		            <tr>
		                <th>id</th>
		                <th>活动名称</th>
		                <th>描述</th>
		                <th>活动起止日期</th>
		                <th>状态</th>
						<th>设奖参数操作</th>
		                <th>中奖名单操作 </th>
		               
		            </tr>
		            </thead>
		            <tbody>
		                #foreach($row in $result.rows)
		                <tr>
		                	<td> $!{row.id} </td>
		                	<td> $!{row.vcName} </td>
		                	<td> $!{row.vcDesc} </td>
		                	<td> $dateTool.format("yyyy-MM-dd",$!{row.dtbeginStr}) 至$dateTool.format("yyyy-MM-dd",$!{row.dtendStr})</td>
		                	<td> #if($row.istate==1)进行中 
								#elseif($row.istate==2)已结束
								#end
							</td>
							  <td><a href="#" onclick="javaScript:alert('研发中')">查看</a>  
		                    </td>
		                    <td><a href="$!{www}/activerewardrecord?iactiveId=$!{row.id}">查看</a>   ｜
		                        <a  href="$!{www}/active/download/downActive?iactiveId=$!{row.id}">导出</a>
		                    </td>
		                </tr>
		                #end
		            </tbody>
		        </table>
		        <div class="row">
		            <div class="col-sm-12">
		                <div class="dataTables_paginate paging_bootstrap">
		                    <ul class="pagination">
		                    	#set($pageRequestURL="$!{www}/active?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
		                    	#paginationHelper($result $pageRequestURL)
		                    </ul>
		                </div>
		            </div>
		       </div>
		       
		    </div>
		</div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->