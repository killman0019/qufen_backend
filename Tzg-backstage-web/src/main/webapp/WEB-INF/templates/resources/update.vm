<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            
             function submitFun(){
            	var vcName = document.getElementById("vcName");
            	var vcUrl = document.getElementById("vcUrl");
            	if(vcName.value == ""){
            		alert("资源名称不能为空");
            		vcName.focus();
            		return false;
            	}
            	if(vcUrl.value == ""){
            		alert("资源URL不能为空");
            		vcUrl.focus();
            		return false;
            	}
            	
            	var inputForm = document.getElementById("inputForm");
            	inputForm.submit();
            }
            
            
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/resources">资源列表</a>
            </li>
            <li class="active">修改资源</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>修改资源</h1>
        </div>
        <form id="inputForm" action="${www}/resources/update" method="post" class="form-horizontal">
        	<input type="hidden" name="id" id="id" value="$!{resource.id}"/>
        	<input type="hidden" name="iParentId" id="iParentId" value="$!{resource.iParentId}"/>
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">资源名称：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" id="vcName" name="vcName" value="$!{resource.vcName}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">资源URL：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" id="vcUrl" name="vcUrl" value="$!{resource.vcUrl}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">资源类型：</label>
                        <div class="col-md-8 col-sm-8">
                            <select class="col-sm-12" name="iType">
                                <option value="1" #if($resource.iType ==1) selected #end>菜单资源</option>
                                <option value="2" #if($resource.iType ==2) selected #end>按钮资源</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">按钮名称：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" name="vcButtonName" value="$!{resource.vcButtonName}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">图标样式：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" name="vcIcon" value="$!{resource.vcIcon}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">排序序号：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" name="isort" value="$!{resource.isort}"/>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <div class="clearfix form-actions">
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-sm-offset-4 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="icon-ok bigger-110"></i>提交
                            </button>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn" type="button" onclick="javascript:history.go(-1);">
                                <i class="icon-arrow-left bigger-110"></i>返回
                            </button>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div><!-- /.page-content -->
</div><!-- /.main-content -->
