<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            
            
             //选择触发事件
            function selectType(typeValue){
            	var vcCatalogTypeNameStr = document.getElementById("vcCatalogTypeNameStr");
            	if(typeValue == ""){
            		alert("目录类型名称不能为空");
            		vcCatalogTypeNameStr.focus();
            		return false;
            	}
            
            	var vcCatalogTypeNameStr = typeValue;
            	var iProjectID = document.getElementById("iProjectID");
                var iProjectName = document.getElementById("iProjectName");	
            	
            	window.location.href="${www}/projectcataloglist/queryCatalogNameByType?vcCatalogTypeNameStr=" + vcCatalogTypeNameStr + 
            							"&iProjectID=" + iProjectID.value + "&iProjectName=" + iProjectName.value;
            }
            
            function submitFun(){
				var iProjectID = document.getElementById("iProjectID");
				var vcCatalogTypeNameStr = document.getElementById("vcCatalogTypeNameStr");
				var vcCatalogNameStr = document.getElementById("vcCatalogNameStr");
				if(iProjectID.value == ""){
            		alert("项目不能为空");
            		iProjectID.focus();
            		return false;
            	}
				if(vcCatalogTypeNameStr.value == ""){
            		alert("目录类型名称不能为空");
            		vcCatalogTypeNameStr.focus();
            		return false;
            	}
				if(vcCatalogNameStr.value == ""){
            		alert("目录名称不能为空");
            		vcCatalogNameStr.focus();
            		return false;
            	}
				         
            	var inputForm = document.getElementById("inputForm");
            	inputForm.submit();
            }
            
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li class="active">修改项目风控审核目录</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>修改项目风控审核目录</h1>
        </div>
        
        #if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end	
   		
        <form id="inputForm" action="${www}/projectcataloglist/update" method="post" class="form-horizontal">
        	<input type="hidden" name="id" id="id" value="$!{projectcataloglist.id}"/>
    		<div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">项目：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="hidden"  id="iProjectID" name="iProjectID" value="$!{iProjectID}" />
                        	<input type="hidden"  id="iProjectName" name="iProjectName" value="$!{iProjectName}" />
                            $!{iProjectName}
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">目录类型名称：</label>
                        <div class="col-md-8 col-sm-8">
                        	<select class="col-sm-12" name="vcCatalogTypeNameStr" id="vcCatalogTypeNameStr"
                        	    onchange="selectType(this.options[this.options.selectedIndex].value)">
                                <option value="">请选择</option>
                            	#foreach($!cerifycatalogtype in $!cerifycatalogtypeList)
	                        		<option value="$!{cerifycatalogtype.id};$!{cerifycatalogtype.vcName};$!{cerifycatalogtype.iSort}" #if($!iTypeName == $!cerifycatalogtype.vcName) selected #end>
	                        			$!{cerifycatalogtype.vcName}
	                        		</option>
	                        	#end
                            </select>
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">目录名称：</label>
                        <div class="col-md-8 col-sm-8">
                        	<select class="col-sm-12" name="vcCatalogNameStr" id="vcCatalogNameStr">
                                <option value="">请选择</option>
                                	#foreach($!cerifycatalog in $!cerifycatalogList)
		                        		<option value="$!{cerifycatalog.vcName};$!{cerifycatalog.iSort};$!{cerifycatalog.vcURL}" #if($!vcCatalogName == $!cerifycatalog.vcName) selected #end>
		                        			$!{cerifycatalog.vcName}
		                        		</option>
		                        	#end
                            </select>
                        </div>
                    </div>
                </div>
             </div>
             
    </div>

            <div class="clearfix form-actions">
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-sm-offset-4 col-md-9">
                            <button class="btn btn-info" type="button" onclick="submitFun()">
                                <i class="icon-ok bigger-110"></i>提交
                            </button>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn" type="button" onclick="javascript:history.go(-1);">
                                <i class="icon-arrow-left bigger-110"></i>返回
                            </button>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div><!-- /.page-content -->
</div><!-- /.main-content -->
