<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            
            
            function submitFun(){
				//...            
            	var inputForm = document.getElementById("inputForm");
            	inputForm.submit();
            }
            
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li class="active">修改风控附件信息</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>修改风控附件信息</h1>
        </div>
        
        #if(${msg})
			<div>
				 #if(${success})
		    		<li class="text-success">$!{msg}</li>
				 #else
		    		<li class="text-danger">$!{msg}</li>
				 #end    	
			</div>
	     #end
        
        <form id="inputForm" action="${www}/projectattach/update" method="post" class="form-horizontal"
            enctype="multipart/form-data">
            <input type="hidden" name="id" id="id" value="$!{projectattach.id}"/>
    		<div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">项目：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="hidden"  id="iProjectID" name="iProjectID" value="$!{iProjectID}" />
                            $!{iProjectName}
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">风控附件名称：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="text" class="col-sm-12" id="vcAttachName" name="vcAttachName" value="$!{projectattach.vcAttachName}" />
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">附件内容：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="file" class="col-sm-12" id="vcAttachContentStr" name="vcAttachContentStr"  />
                        	<a href="${www}/$!{filePath}">附件下载</a>
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">排列顺序：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="number" class="col-sm-12" id="iSort" name="iSort" value="$!{projectattach.iSort}" />
                        </div>
                    </div>
                </div>
             </div> 
    </div>

            <div class="clearfix form-actions">
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-sm-offset-4 col-md-9">
                            <button class="btn btn-info" type="button" onclick="submitFun()">
                                <i class="icon-ok bigger-110"></i>提交
                            </button>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn" type="button" onclick="javascript:history.go(-1);">
                                <i class="icon-arrow-left bigger-110"></i>返回
                            </button>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div><!-- /.page-content -->
</div><!-- /.main-content -->
