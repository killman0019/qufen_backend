<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/consoleaccounts">账号列表</a>
            </li>
            <li class="active">修改账号</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">

<div class="page-header">
    <h1>修改账号</h1>
</div>

   		#if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end	

<form action="${www}/consoleaccounts/update" method="post" class="form-horizontal">
    <input type="hidden" name="id" name="id" value="$!{account.id}"/>
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="form-group">
                <label class="col-md-4 col-sm-2 control-label">账号：</label>
                <div class="col-md-8 col-sm-8">
                    <input type="text" class="col-sm-12" name="vcLoginName" value="$!{account.vcLoginName}"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 col-sm-2 control-label" >姓名：</label>
                	<div class="col-md-8 col-sm-8">
                    	<input type="text" class="col-sm-12" name="vcRealName" value="$!{account.vcRealName}"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 col-sm-2 control-label" >手机号：</label>
                <div class="col-md-8 col-sm-8">
                    <input type="text" class="col-sm-12" name="vcPhone" value="$!{account.vcPhone}"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 col-sm-2 control-label">角色：</label>
                <div class="col-md-8 col-sm-8">
                   <table class="table table-striped table-bordered  dataTable">
                   	<tbody>
                   	    <tr>
                  		 	#foreach($roleInfo in $roleInfoList)
								<td>
                   			         <label class="checkbox-inline">
                           			 <input type="checkbox" value="${roleInfo.id}"
                               				 #foreach($personrole in $account.rolesId)
                                   				 #if($personrole == $roleInfo.id)
                                  				 	checked
                                   				 #end
                               				 #end
                                  			 name="rolesId"> ${roleInfo.vcRoleName}
                        			</label>
                   				</td>
                   			#if(($loopCounter+1) % 3 == 0)
                   				</tr><tr>
                   		    #end
                   		 	#end	
                   		</tr>                  		
                   	</tbody>
                   </table>
                </div>
            </div>
        	<div class="form-group">
        		<label class="col-md-4 col-sm-2 control-label">状态：</label>
        		<div class="col-md-8 col-sm-8">
            		<select class="col-sm-12" name="iValid">
		                <option value="1" #if($account.iValid ==1) selected #end>有效</option>
		                <option value="2" #if($account.iValid ==2) selected #end>无效</option>
		            </select>
        		</div>
           </div>
    	</div>
    </div>
    <div class="clearfix form-actions">
        <div class="row">
            <div class="col-md-8">
                <div class="col-sm-offset-4 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="icon-ok bigger-110"></i>提交
                    </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button class="btn" type="button" onclick="javascript:history.go(-1);">
                        <i class="icon-arrow-left bigger-110"></i>返回
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
</div>
</div>