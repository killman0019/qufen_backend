<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            
            
            //删除确认框
            function delFun(id){
            	var flag = confirm("确认删除该记录？")
            	if (flag == true){
            		window.location.href="${www}/projectcataloglist/delete?id=" + id;
            	}   
            }
            
            //详情
            function detailFun(id,flag){
            		window.location.href= "${www}/projectcataloglist/detail?id=" + id + "&flag=" + flag;
            	}
            
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/projectcataloglist">项目风控审核目录列表</a>
            </li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">

        <div class="page-header">
            <h1>项目风控审核目录列表</h1>
        </div>
        <div class="container-fluid">
            <div class="dataTables_wrapper">
                <div class="row">
                    <div class="col-sm-11">
                        <form class="form-inline" role="form">
                            <div class="form-group">
                            	<label>项目名称：</label>
	                            <select name="iProjectID" id="iProjectID">
                               	    <option value="">请选择</option>
                                	#foreach($!project in $!projectList)
		                        		<option value="$!{project.id}" #if($!project.id == $!{iProjectID}) selected #end>
		                        			$!{project.vcName}
		                        		</option>
		                        	#end
                                </select>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-xs btn-primary" type="submit">查询</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-1 text-right">
                        <a href="${www}/projectcataloglist/new" class="btn btn-success btn-xs">添加</a>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable">
                    <thead>
                    <tr>
                        <th>项目信息</th>
                        <th>类型名称</th>
                        <th>类型名称排序</th>
                        <th>目录名称</th>
                        <th>目录名称排序</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($row in $result.rows)
	                        <tr>
	                            <td>
	                            	#foreach($!project in $!projectList)
	                            		#if($!project.id == $!row.iProjectID)
	                            			项目编号：$!project.id 
	                            			</br>
	                            			项目名称：$!project.vcName 
	                            		#end
	                            	#end
	                            </td>
	                            <td> 
	                             	${row.vcCatalogTypeName} 
	                            </td>
	                            <td> 
	                             	${row.iCatalogTypeSort} 
	                            </td>
	                            <td> 
	                             	${row.vcCatalogName} 
	                            </td>
	                            <td> 
	                             	${row.iCatalogSort} 
	                            </td>
	                            <td>
	                            	<a href="${www}/projectcataloglist/edit?id=${row.id}">修改</a> ｜
	                            	<a href="javascript:delFun(${row.id});">删除</a> ｜ 
	                            	<a href="javascript:detailFun(${row.id},'$!{flag}');">详情</a>
	                            </td>
	                        </tr>
                        #end
                    </tbody></table>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="dataTables_paginate paging_bootstrap">
                            <ul class="pagination">
                                #set($pageRequestURL="${www}/projectcataloglist?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
                                #paginationHelper($result $pageRequestURL)
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->
