        <div class="red">$!{msg}</div>
         			  <div class="form-group">
                      <script id="editor" name="vcContent" type="text/plain" style="height:500px;" ></script>
                </div>
             	<div class="row">
                <div class="col-xs-12 col-md-4">
                   
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">有效期：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12 input-mask-date-time" name="dtStartTimeStr" value="$!{param.dtStartTimeStr}"/>
