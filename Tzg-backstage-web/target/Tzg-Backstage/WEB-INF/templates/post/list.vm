<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li class="active">Post列表</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>
	<div class="page-content">
		<div class="page-header">
		    <h1>Post列表</h1>
		</div>
		<div class="container-fluid">
		    <div class="dataTables_wrapper">
		        <div class="row">
		            <div class="col-sm-11">
		                <form class="form-inline" role="form">
		                    <div class="form-group">
		                        <label>名称：</label>
		                        <input type="text" name="vcName" value="">
		                    </div>
		                    <div class="form-group">
		                        <button class="btn btn-xs btn-primary" type="submit">查询</button>
		                    </div>
		                </form>
		            </div>
                    <div class="col-sm-1">
                        <a href="$!{www}/post/new" class="btn btn-success btn-xs">添加</a>
                    </div>
		        </div>
		        <table class="table table-striped table-bordered table-hover dataTable">
		            <thead>
		            <tr>
		                <th>postId</th>
		                <th>项目ID</th>
		                <th>projectIcon</th>
		                <th>projectCode</th>
		                <th>projectEnglishName</th>
		                <th>帖子标题</th>
		                <th>帖子类型：1-评测；2-讨论；3-文章</th>
		                <th>剪短描述</th>
		                <th>缩略图json，目前最多三张图的url等信息</th>
		                <th>评论数量</th>
		                <th>点赞数</th>
		                <th>浏览量</th>
		                <th>捐赠人数</th>
		                <th>收藏人数</th>
		                <th>用户ID</th>
		                <th>用户头像</th>
		                <th>用户签名</th>
		                <th>用户昵称</th>
		                <th>createTime</th>
		                <th>updateTime</th>
		                <th>uuid</th>
		                <th>状态：0-删除；1-有效</th>
		             
		                <th>操作</th>
		               
		            </tr>
		            </thead>
		            <tbody>
		                #foreach($row in $result.rows)
		                <tr>
		                	<td> $!{row.postId} </td>
		                	<td> $!{row.projectId} </td>
		                	<td> $!{row.projectIcon} </td>
		                	<td> $!{row.projectCode} </td>
		                	<td> $!{row.projectEnglishName} </td>
		                	<td> $!{row.postTitle} </td>
		                	<td> $!{row.postType} </td>
		                	<td> $!{row.postShortDesc} </td>
		                	<td> $!{row.postSmallImages} </td>
		                	<td> $!{row.commentsNum} </td>
		                	<td> $!{row.praiseNum} </td>
		                	<td> $!{row.pageviewNum} </td>
		                	<td> $!{row.donateNum} </td>
		                	<td> $!{row.collectNum} </td>
		                	<td> $!{row.createUserId} </td>
		                	<td> $!{row.createUserIcon} </td>
		                	<td> $!{row.createUserSignature} </td>
		                	<td> $!{row.createUserName} </td>
		                	<td> $!{row.createTime} </td>
		                	<td> $!{row.updateTime} </td>
		                	<td> $!{row.uuid} </td>
		                	<td> $!{row.status} </td>
		                    <td><a href="$!{www}/post/find?id=$!{row.id}">修改</a>   ｜
		                        <a onclick="delcfm()" href="$!{www}/post/delete?id=$!{row.id}">删除</a>
		                    </td>
		                </tr>
		                #end
		            </tbody>
		        </table>
		        <div class="row">
		            <div class="col-sm-12">
		                <div class="dataTables_paginate paging_bootstrap">
		                    <ul class="pagination">
		                    	#set($pageRequestURL="$!{www}/post?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
		                    	#paginationHelper($result $pageRequestURL)
		                    </ul>
		                </div>
		            </div>
		       </div>
		       
		    </div>
		</div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->