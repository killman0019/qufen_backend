
#set($layout = "layout/simple.vm")
    <div class="page-content">
        <div class="container-fluid">
            <div class="dataTables_wrapper">
                <table class="table table-striped table-bordered table-hover dataTable">
                    <thead>
                    <tr>
                    	<th>选择</th>
                        <th>资料</th>
                        <th>文件</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($row in $result.rows)
                        <tr>
                        	<td> <input type="radio" name="id" value="${row.vcUrl}" data-name="${row.vcUrl}" /></td>
                        	<td> 
                        		名称：${row.vcName} 
                        		<br>
                        		路径：${row.vcUrl} 
                        	</td>
                        	<td> 
                        		<a href="${www}$!{row.vcUrl}"><img src="$!{staticUploadUrl}$!{row.vcUrl}"  width="80"  height="60" /></a>
                        	</td>
                            <td>
                            	<a href="${www}/uploadfile/filePathDetail?id=${row.id}">详情</a>
                            </td>
                        </tr>
                        #end
                    </tbody></table>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="dataTables_paginate paging_bootstrap">
                            <ul class="pagination">
                                #set($pageRequestURL="${www}/uploadfile/filePathList?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
                                #paginationHelper($result $pageRequestURL)
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div><!-- /.page-content -->
<!-- /.main-content -->


