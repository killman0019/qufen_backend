                        </div>
                        
                     </div>
                </div>
    		</form>	
        </div>	
			
		
		<!-- 审核 开始-->
		<div id="risk-09" class="tab-pane">
			<div id="risk-09" class="tab-pane #if(${risk_selected_tab_id} =="risk-09") in active #end">
				<!-- 历史审核记录列表 -->
				 #if($!{token}) 
    				<hr />
				    <div class="page-header">
					    <h1>历史审核记录列表</h1>
					</div>
				    <div class="container-fluid">
						<div class="dataTables_wrapper">
							<table class="table table-striped table-bordered table-hover dataTable">
						            <thead>
							            <tr>
							                <th>审核等级</th>
							                <th>审核人</th>
							                <th>审核时间</th>
							                <th>审核状态</th>
							                <th>审核意见</th>
							                <th>创建时间</th>
							            </tr>
						            </thead>
						            <tbody>
						                #foreach($row in $result.rows)
							                <tr>
							                	<td>
							                		#foreach($approvalRating in $approvalRatingList)
							                			#if($approvalRating.id == $row.vcApproveLevel)
							                				$!{approvalRating.vcApprovalName}
							                			#end
							                		#end
							                	</td>
							                	<td> ${row.vcApproverName} </td>
							                	<td> ${row.dtApproveStr} </td>
							                	<td>
							                		#if(${row.istate}==1) 通过 #end
							                	  	#if(${row.istate}==2) 终止 #end
							                	  	#if(${row.istate}==3) 退回 #end
							                	</td>
							                	<td> ${row.vcApproveIdea} </td>
							                	<td> ${row.dtCreateStr} </td>
							                </tr>
						                #end
						            </tbody>
							</table>   
				        </div>
				    </div>
				    <hr />
   				 #end
				<form id="inputForm" action="${www}/changephoneaudit/audit" method="post" class="form-horizontal">
					<input type="hidden" id="risk_selected_tab_id" name="risk_selected_tab_id" value="risk-09" />
					<input type="hidden" name="id" id="id" value="$!{param.id}"/>
			    	<input type="hidden" name="vcCurrentFlow" id="vcCurrentFlow" value="$!{param.vcCurrentFlow}"/>
			    	<input type="hidden" name="vcApprovalFlow" id="vcApprovalFlow" value="$!{param.vcApprovalFlow}"/>
			    	<input type="hidden" name="token" id="token" value="$!{token}"/>
					
						#if($!{token}) 
				    	   <div class="row">
					            <div class="col-xs-12  col-md-4">
					                    <div class="form-group">
					                        <label class="col-md-4 col-sm-2 control-label">审核意见：</label>
					                        <div class="col-md-8 col-sm-8">
					                            <textarea rows="6" cols="60" name="vcApproveIdea" id="vcApproveIdea"
					                            	 #if($!param.istate == 3 || $!param.istate == 4) disabled="disabled" #end>$!{vcApproveIdea}</textarea>
					                        </div>
					                    </div>
					              </div>
					        </div>
						#end
						 #if($!{token})  
						    <div class="clearfix form-actions">
								
								
						    	<div class="col-sm-offset-2 col-md-9" >
									<input type= "hidden" name="lastFlow"  id="lastFlow" value="${lastFlow}"/>
									  #if($!lastFlow == "1")  
											<input type="button" value="获取验证码" id="getVerifyCode" style="margin-left:10px;margin-right:10px;"/> 
											验证码：<input type="text" style="width:80px" name="code" id="code"  style="margin-left:10px;"/>
									  #end 
						            <button class="btn btn-info" type="button" onclick="auditFun('1')" style="margin-left:10px;"
						              #if($!param.istate == 3 || $!param.istate == 4) disabled="disabled" #end  >
						                <i class="icon-ok bigger-110"></i>
						                通过
						            </button>
						            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						            <button class="btn btn-info" type="button" onclick="auditFun('3')"
						               #if($!param.istate == 3 || $!param.istate == 4) disabled="disabled" #end >
						                <i class="icon-ok bigger-110"></i>
						                  退回
					            </button>
					        </div>
					    </div>
						#end
				</form>
			</div>
		</div>
		<!-- 审核  结束-->


	</div>
</div>			      
		      
	 
