<script type="text/javascript">
//审核
 function auditFun(iState){
	    var id = document.getElementById("id");
	 	var vcApproveIdea = document.getElementById("vcApproveIdea");
	 	var vcCurrentFlow = document.getElementById("vcCurrentFlow");
	 	var vcApprovalFlow = document.getElementById("vcApprovalFlow");
	 	var token = document.getElementById("token");
	 	/*
	 	if(vcApproveIdea.value == ""){
    		alert("审核意见不能为空");
    		vcApproveIdea.focus();
    		return false;
	    }
		*/
		if($("#lastFlow").val()=='1'){
			if($("#code").val()==""){
    			alert("短信验证码不能为空");
        		$("#code").focus();
        		return false;
    		}
    		jQuery.post("${www}/dynamicValidateCode/changephoneaudit/verifyCode",{code:$("#code").val()},
        		function(r){
    				if(r.success){
    					window.location.href="${www}/changephoneaudit/approval?vcApproveIdea=" + vcApproveIdea.value + "&iState=" + iState + "&id=" + id.value + 
    	                          "&vcCurrentFlow=" + vcCurrentFlow.value + "&vcApprovalFlow=" + vcApprovalFlow.value + 
    	                          "&token=" + token.value+"&code="+document.getElementById("code").value;
    				}else{
    					alert("验证码错误");
    				}
    			});
		}else{
			window.location.href="${www}/changephoneaudit/approval?vcApproveIdea=" + vcApproveIdea.value + "&iState=" + iState + "&id=" + id.value + 
    	                          "&vcCurrentFlow=" + vcCurrentFlow.value + "&vcApprovalFlow=" + vcApprovalFlow.value + 
    	                          "&token=" + token.value;
		}
		
			
	 }    


	 $(function(){
	
    	if($("#lastFlow").val()=='1'){
    	 	$("#code").blur(function(){
    			jQuery.post("${www}/dynamicValidateCode/changephoneaudit/verifyCode",{"code":$("#code").val()},
    			function(r){
    				if(r.success){
    					 
    				}else{
    					alert("验证码错误");
    				}
    			
    			});
    		});
    	 	$("#getVerifyCode").click(function(){
    			jQuery.post("${www}/dynamicValidateCode/changephoneaudit/send",{"id":${param.id}},function(){alert("发送成功，请注意接收短信。");});
    		});
		}
	
	 });
 </script>
