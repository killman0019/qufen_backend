<script src="${www}/js/my97DatePicker/WdatePicker.js"></script>
<script src="${www}/js/jquery.maskedinput.min.js"></script>
<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
             jQuery(function($) {
				$('.input-mask-date-time').mask('9999-99-99 99:99:99');
			});
			  function change(value)
              {
              if(value==2){
               $("#dtSend-div").css("display","");
              }else{
               $("#dtSend-div").css("display","none");
              }
             }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/emailmanage">新增邮件列表</a>
            </li>
            <li class="active">新增邮件</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>新增邮件</h1>
        </div>
        
        #if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end       
        
        <form action="${www}/emailmanage/save" method="post" class="form-horizontal">
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">标题：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="text" class="col-sm-12" id="vcTitle" name="vcTitle" value="$!{emailmanage.vcTitle}" />
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">接收对象：</label>
                        <div class="col-md-8 col-sm-8">
                            <select class="col-sm-12" name="itype" id="itype">
                                <option value="">请选择</option>
                               <!-- <option value="1" #if($emailmanage.itype && $emailmanage.itype ==1) selected #end>所有人</option> -->
                                <option value="2" #if($emailmanage.itype && $emailmanage.itype ==2) selected #end>投资者</option>
                                <option value="3" #if($emailmanage.itype && $emailmanage.itype ==3) selected #end>借款人</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
             <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">注册时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtRegisterStartStr" id="dtRegisterStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{emailmanage.dtRegisterStartStr}" class="input-date">
								-
						     <input type="text" name="dtRegisterEndStr"  id="dtRegisterEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{emailmanage.dtRegisterEndStr}" class="input-date">
                        </div>
                    </div>
                  </div>
            </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最后登录时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtLastLoginStartStr" id="dtLastLoginStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{emailmanage.dtLastLoginStartStr}" class="input-date">
								-
						     <input type="text" name="dtLastLoginEndStr"  id="dtLastLoginEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{emailmanage.dtLastLoginEndStr}" class="input-date">
                        </div>
                    </div>
               </div>
            </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最后充值时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtLastRechargeStartStr" id="dtLastRechargeStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{emailmanage.dtLastRechargeStartStr}" class="input-date">
								-
						     <input type="text" name="dtLastRechargeEndStr"  id="dtLastRechargeEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{emailmanage.dtLastRechargeEndStr}" class="input-date">
                        </div>
                    </div>
                 </div>
            </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最后投资时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtLastInvestStartStr" id="dtLastInvestStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{emailmanage.dtLastInvestStartStr}" class="input-date">
								-
						     <input type="text" name="dtLastInvestEndStr"  id="dtLastInvestEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{emailmanage.dtLastInvestEndStr}" class="input-date">
                        </div>
                    </div>
                  </div>
            </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">累计充值金额：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="number" name="minTotalRecharge" id="minTotalRecharge" value="$!{emailmanage.minTotalRecharge}" >
								-
						     <input type="number" name="maxTotalRecharge"  id="maxTotalRecharge" value="$!{emailmanage.maxTotalRecharge}" >
                        </div>
                    </div>
                  </div>
            </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">累计投资金额：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="number" name="minTotalInvest" id="minTotalInvest" value="$!{emailmanage.minTotalInvest}" >
								-
						     <input type="number" name="maxTotalInvest"  id="maxTotalInvest" value="$!{emailmanage.maxTotalInvest}" >
                        </div>
                    </div>
                  </div>
            </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">账户余额：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="number" name="minTotalBalance" id="minTotalBalance" value="$!{emailmanage.minTotalBalance}" >
								-
						     <input type="number" name="maxTotalBalance"  id="maxTotalBalance" value="$!{emailmanage.maxTotalBalance}" >
                        </div>
                    </div>
                  </div>
            </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">发送时间：</label>
                        <div class="col-md-8 col-sm-8">
                              <input type="radio" name="sType" value="1" #if($!{emailmanage.sType} == 1) checked #end onchange = "change(1);">立即&nbsp;&nbsp;
				              <input type="radio" name="sType" value="2" #if($!{emailmanage.sType} == 2) checked #end onchange = "change(2);">定时
                        <div id="dtSend-div" #if($!emailmanage.sType != 2)  style="display:none" #end>
                           <input type="text" class="col-sm-4 input-mask-date-time" id="dtSendStr" name="dtSendStr" value="$!{emailmanage.dtSendStr}" />
                        </div>
                        </div>
                    </div>     
                    </div>
            </div>
     		<div class="row">
                        		<script id="editor" name="vcContent" type="text/plain" style="height:500px;"></script>
             </div>
            
            <div class="clearfix form-actions">
                <div class="col-sm-offset-2 col-md-9">
                    <button class="btn" type="button" onclick="javascript:history.go(-1);">
		                <i class="icon-arrow-left bigger-110"></i>返回
		            </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		            <button class="btn btn-info" type="submit">
                        <i class="icon-ok bigger-110"></i> 提交
                    </button>
                </div>
            </div>
		</form>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->


 	<script type="text/javascript" charset="utf-8" src="${www}/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="${www}/ueditor/ueditor.all.min.js"> </script>
    <!--建议手动加在语言，避免在ie下有时因为加载语言失败导致编辑器加载失败-->
