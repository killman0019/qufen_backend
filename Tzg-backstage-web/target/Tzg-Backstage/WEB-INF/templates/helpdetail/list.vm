<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/helpdetail">帮助明细列表</a>
            </li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">

        <div class="page-header">
            <h1>帮助明细列表</h1>
        </div>
        <div class="container-fluid">
        
       #if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end	         
        
            <div class="dataTables_wrapper">
                <div class="row">
                    <div class="col-sm-10">
                        <form class="form-inline" role="form">
                          <div class="form-group">  
                                <label>问题：</label>
                                <input type="text" id="vcQuestion" name="vcQuestion" 
                                      value="$!{query.vcQuestion}" />
                           </div>                        
                          <div class="form-group">  
                                <label>类别：</label>
                                <select name="ihelpCategyId" id="ihelpCategyId">
	                        		<option value="">请选择</option>
		                        	#foreach($!helpcategy in $!helpcategyList)
		                        		<option value="$!{helpcategy.id}" #if($query.ihelpCategyId && $helpcategy.id == $query.ihelpCategyId) selected #end>
		                        			$!{helpcategy.vcName}
		                        		</option>
		                        	#end
	                        	</select>
                           </div>
                           <div class="form-group">  
                                <label>状态：</label>
                                <select name="istate">
	                                <option value="1" #if($query.istate && $query.istate ==1) selected #end>有效</option>
	                                <option value="2" #if($query.istate && $query.istate ==2) selected #end>无效</option>
	                            </select>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-xs btn-primary" type="submit">查询</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-2 text-right">
                        <a href="${www}/helpdetail/new" class="btn btn-success btn-xs">添加</a>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable">
                    <thead>
                    <tr>
                    	<th>类别</th>
                    	<th>问题</th>
                        <th>状态</th>
                        <th>顺序</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($row in $result.rows)
                        <tr>
                        	<td> 
	                        	#foreach($!helpcategy in $!helpcategyList)
	                        		#if($!helpcategy.id == $row.ihelpCategyId)
	                        			$!helpcategy.vcName
	                        		#end
                        		#end
                        	</td>
                        	<td><a href="${www}/helpdetail/detail?id=${row.id}">${row.vcQuestion}</a></td>
                          	<td> 
                        		#if(${row.istate} == "1")
                        			有效
                        		#elseif(${row.istate} == "2")
                        			无效
                        		#end
                        	</td>
                        	<td>${row.iSort}</td>                      	
                        	<td>${row.dtCreateStr}</td>
                            <td>
                            	<a href="${www}/helpdetail/find?id=${row.id}">修改</a> 
                            </td>
                        </tr>
                        #end
                    </tbody></table>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="dataTables_paginate paging_bootstrap">
                            <ul class="pagination">
                                #set($pageRequestURL="${www}/helpdetail?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
                                #paginationHelper($result $pageRequestURL)
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->
