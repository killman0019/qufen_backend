<script src="${www}/js/sea.js" id="seajsnode"></script>
<script type="text/javascript">
seajs.use(['dialog'], function(dialog) {
    var vcLogoUrl = $("#vcLogoUrl");
    var institutionPath = $("#institutionPath");
    var showDialog = function () {
        dialog.alert({
            title: '合作机构列表',
            content: '<iframe id="js_selector" frameborder="0" width="800" height="400" src="${www}/uploadfile/filePathList?itype=7"></iframe>',
            ok: function() {
                var checkedRadio = $(":radio:checked", document.getElementById("js_selector").contentDocument);
                if (checkedRadio.size()) {
                    vcLogoUrl.val(checkedRadio.val());
                    institutionPath.val(checkedRadio.attr("data-name"));
                }
            }
        });
    };
    institutionPath.click(showDialog);
    $("#select_institution_path_btn").click(showDialog);
});
</script>
