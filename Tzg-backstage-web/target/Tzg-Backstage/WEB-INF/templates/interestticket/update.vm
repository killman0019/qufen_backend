<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/interestticket/list">加息券列表</a>
            </li>
            <li class="active">修改加息券</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">

        <div class="page-header">
            <h1>修改加息券</h1>
        </div>
        <form action="${www}/interestticket/update?id=$!{param.id}" method="post" class="form-horizontal" id="j_interestticket_form">
            <div class="row">
                <div class="col-xs-12 col-md-4">
                     <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">名称：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text"  name="vcName" value="$!{param.vcName}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">加息券值：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text"  name="numInterestRate" value="$!{param.numInterestRate}"/> %
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最大投资期限：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text"  name="imaxInterestTime" value="$!{param.imaxInterestTime}"/> 天
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最大投资金额：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text"  name="numMaxInterestRate" value="$!{param.numMaxInterestRate}"/> 元
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">有效期：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text"  name="iexpired" value="$!{param.iexpired}"/> 天
                        </div>
                    </div>
                    <div class="red">$!{msg}</div>
                    
                 </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-sm-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="icon-ok bigger-110"></i>提交
                    </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		            <button class="btn btn-info" type="button" onclick="javascript:history.go(-1);">
		                <i class="icon-arrow-left bigger-110"></i>返回
		            </button>
                </div>
            </div>
    </div>
</div>
<script src="${www}/js/jquery.maskedinput.min.js"></script>
		<script type="text/javascript">
			jQuery(function($) {
				$("#j_interestticket_form").on("submit", function(e) {
					var _form = $(this);
					
					var _vcName = _form.find("[name=vcName]");
					var _numInterestRate = _form.find("[name=numInterestRate]");
					var _imaxInterestTime = _form.find("[name=imaxInterestTime]");
					var _numMaxInterestRate = _form.find("[name=numMaxInterestRate]");
					var _iexpired = _form.find("[name=iexpired]");
					
					
					if(_vcName.val()==""){
						alert("名称不能为空");
						return false;
					}
					var reg = /^[0-9]+([.]{1}[0-9]{1,2})?$/;
					if(_numInterestRate.val()!=""){
						if(!reg.test(_numInterestRate.val())){
							alert("加息券值不符合规则");
							return false;
						}
					}else{
						alert("加息券值不能为空");
						return false;
					}
					
					if(_imaxInterestTime.val()==""){
						alert("最大投资期限不能为空");
						return false;
					}
					var a = /^[0-9]+([.]{1}[0-9]{1,2})?$/;
					if(_numMaxInterestRate.val()!=""){
						if(!a.test(_numMaxInterestRate.val())){
							alert("最大投资金额不符合规则");
							return false;
						}
					}else{
						alert("最大投资金额不能为空");
						return false;
					}
					
					if(_iexpired.val()==""){
						alert("有效期不能为空");
						return false;	
					}
					
				});
			})
		</script>
