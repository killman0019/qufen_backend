<script src="${www}/js/my97DatePicker/WdatePicker.js"></script>
<script src="${www}/js/jquery.maskedinput.min.js"></script>
<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
             jQuery(function($) {
				$('.input-mask-date-time').mask('9999-99-99 99:99:99');
			});
			  function change(value)
              {
              if(value==2){
               $("#dtSend-div").css("display","");
              }else{
               $("#dtSend-div").css("display","none");
              }
             }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/messagemanage">站内信列表</a>
            </li>
            <li class="active">新增站内信</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>新增站内信</h1>
        </div>

        #if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end	         
        
        <form action="${www}/messagemanage/save" method="post" class="form-horizontal">
            <div class="row">
                <div class="col-xs-12 col-md-8">
                      <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">类型 ：</label>
                        <div class="col-md-8 col-sm-8">
                        	<select class="col-sm-12" name="imode" id="imode">
                                <option value="">请选择</option>
                                <option value="1" #if($param.imode && $param.imode ==1) selected #end>系统通知</option>
                                <option value="2" #if($param.imode && $param.imode ==2) selected #end>活动公告</option>
                                <option value="3" #if($param.imode && $param.imode ==3) selected #end>客户端公告-注意：此类内容请控制住100字以内且不要添加样式，只能编辑文字加换行</option>
                            </select>
                        </div>
                    </div>                 
                     <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">接收对象 ：</label>
                        <div class="col-md-8 col-sm-8">
                        	<select class="col-sm-12" name="itype" id="itype">
                                <option value="">请选择</option>
                                <!-- <option value="1" #if($param.itype && $param.itype ==1) selected #end>所有人</option> -->
                                <option value="2" #if($param.itype && $param.itype ==2) selected #end>投资人</option>
                                <option value="3" #if($param.itype && $param.itype ==3) selected #end>借款人</option>
                            </select>
                        </div>
                    </div> 
                     <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">注册时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtRegisterStartStr" id="dtRegisterStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtRegisterStartStr}" class="input-date">
								-
						     <input type="text" name="dtRegisterEndStr"  id="dtRegisterEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtRegisterEndStr}" class="input-date">
                        </div>
                    </div>
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最后登录时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtLastLoginStartStr" id="dtLastLoginStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtLastLoginStartStr}" class="input-date">
								-
						     <input type="text" name="dtLastLoginEndStr"  id="dtLastLoginEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtLastLoginEndStr}" class="input-date">
                        </div>
                    </div>
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最后充值时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtLastRechargeStartStr" id="dtLastRechargeStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtLastRechargeStartStr}" class="input-date">
								-
						     <input type="text" name="dtLastRechargeEndStr"  id="dtLastRechargeEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtLastRechargeEndStr}" class="input-date">
                        </div>
                    </div>
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最后投资时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtLastInvestStartStr" id="dtLastInvestStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtLastInvestStartStr}" class="input-date">
								-
						     <input type="text" name="dtLastInvestEndStr"  id="dtLastInvestEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtLastInvestEndStr}" class="input-date">
                        </div>
                    </div>
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">累计充值金额：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="number" name="minTotalRecharge" id="minTotalRecharge" value="$!{param.minTotalRecharge}" >
								-
						     <input type="number" name="maxTotalRecharge"  id="maxTotalRecharge" value="$!{param.maxTotalRecharge}" >
                        </div>
                    </div>
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">累计投资金额：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="number" name="minTotalInvest" id="minTotalInvest" value="$!{param.minTotalInvest}" >
								-
						     <input type="number" name="maxTotalInvest"  id="maxTotalInvest" value="$!{param.maxTotalInvest}" >
                        </div>
                    </div>
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">账户余额：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="number" name="minTotalBalance" id="minTotalBalance" value="$!{param.minTotalBalance}" >
								-
						     <input type="number" name="maxTotalBalance"  id="maxTotalBalance" value="$!{param.maxTotalBalance}" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">最后一笔回款时间：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="text" name="dtLastRepayStartStr" id="dtLastRepayStartStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtLastRepayStartStr}" class="input-date">
								-
						     <input type="text" name="dtLastRepayEndStr"  id="dtLastRepayEndStr" onFocus="WdatePicker({lang:'zh-cn'})" value="$!{param.dtLastRepayEndStr}" class="input-date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">账户资产总计：</label>
                        <div class="col-md-8 col-sm-8">
                             <input type="number" name="minTotalAsset" id="minTotalAsset" value="$!{param.minTotalAsset}" >
								-
						     <input type="number" name="maxTotalAsset"  id="maxTotalAsset" value="$!{param.maxTotalAsset}" >
                        </div>
                    </div>
                   <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">发送时间：</label>
                        <div class="col-md-8 col-sm-8">
                              <input type="radio" name="sType" value="1" #if($!{param.sType} == 1) checked #end onchange = "change(1);">立即&nbsp;&nbsp;
				              <input type="radio" name="sType" value="2" #if($!{param.sType} == 2) checked #end onchange = "change(2);">定时
                        <div id="dtSend-div" #if($!param.sType != 2)  style="display:none" #end>
                           <input type="text" class="col-sm-4 input-mask-date-time" id="dtSendStr" name="dtSendStr" value="$!{param.dtSendStr}" />
                        </div>
                        </div>
                    </div>              
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">标题：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" name="vcTitle" value="$!{param.vcTitle}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">副标题：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" name="vcSubTitle" value="$!{param.vcSubTitle}"/>
                        </div>
                    </div>               
               </div>     
            </div>    
             <div class="row">
 					<script id="editor" name="vcContent" type="text/plain" style="height:500px;"></script>
     		 </div>               
            <div class="clearfix form-actions">
                <div class="col-sm-offset-2 col-md-9">
                     <button class="btn btn-info" type="button" onclick="javascript:history.go(-1);">
		                <i class="icon-arrow-left bigger-110"></i>返回
		            </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		           <button class="btn btn-info" type="submit">
                        <i class="icon-ok bigger-110"></i> 提交
                    </button>
                </div>
            </div>

</form>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->

	<script type="text/javascript" charset="utf-8" src="${www}/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="${www}/ueditor/ueditor.all.min.js"> </script>
    <!--建议手动加在语言，避免在ie下有时因为加载语言失败导致编辑器加载失败-->
    <!--这里加载的语言文件会覆盖你在配置项目里添加的语言类型，比如你在配置项目里配置的是英文，这里加载的中文，那最后就是中文-->
    <script type="text/javascript" charset="utf-8" src="${www}/ueditor/lang/zh-cn/zh-cn.js"></script>
	<script type="text/javascript">
    //实例化编辑器
    //建议使用工厂方法getEditor创建和引用编辑器实例，如果在某个闭包下引用该编辑器，直接调用UE.getEditor('editor')就能拿到相关的实例
   		 var ue = UE.getEditor('editor');
   		    		 ue.addListener("ready", function () {
    	    // editor准备好之后才可以使用
    	    //var content = $("#vcContent").val();
       	 	UE.getEditor('editor').setContent('$!{param.vcContent}');
		});
    </script>