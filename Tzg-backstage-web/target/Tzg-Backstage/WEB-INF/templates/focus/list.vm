<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
         
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/focus">焦点图列表</a>
            </li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">

        <div class="page-header">
            <h1>焦点图列表</h1>
        </div>
        <div class="container-fluid">
        
         #if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end       
        
            <div class="dataTables_wrapper">
                <div class="row">
                    <div class="col-sm-10">
                        <form class="form-inline" role="form">
                            <div class="form-group">
	                            <label>别名：</label>
                                <input type="text" name="vcName" value="$!{query.vcName}">
                            </div>
                            <div class="form-group">
	                            <label>适用类型：</label>
                                <select name="itype">
                        		<option value="">全部</option>
                        		<option value="1"#if($query.itype==1)selected #end>pc</option>
                        		<option value="2"#if($query.itype==2)selected #end>wap</option>
                        		<option value="3"#if($query.itype==3)selected #end>app</option>
								<option value="4"#if($query.itype==4)selected #end>android</option>
								<option value="5"#if($query.itype==5)selected #end>ios</option>
                        	</select>
                            </div>
                            
                            <div class="form-group">
                                <label>状态：</label>
                                <select name="istate">
	                                <option value="1" #if($query.istate && $query.istate ==1) selected #end>有效</option>
	                                <option value="2" #if($query.istate && $query.istate ==2) selected #end>无效</option>
	                            </select>
	                          </div>   
                            <div class="form-group">
                                <button class="btn btn-xs btn-primary" type="submit">查询</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-2 text-right">
                        <a href="${www}/focus/new" class="btn btn-success btn-xs">添加</a>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable">
                    <thead>
                    <tr>
                        <th>别名</th>
                        <th>适用类型</th>
                        <th>地址</th>
                        <th>顺序</th>
                        <th>状态</th>
                        <th>活动</th>
                        <th>创建时间</th>
                        <th>是否打开新页面</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($row in $result.rows)
                        <tr>
                        	<td> ${row.vcName} </td>
                        	<td>
                        	#if($row.itype==1)pc
                        	#elseif($row.itype==2)wap
                        	#elseif($row.itype==3)app
							#elseif($row.itype==4)android
							#elseif($row.itype==5)ios
                        	#end
                        	
                        	</td>
                        	<td> 
                        		链接地址：${row.vcUrl} 
                        		</br>
                        		跳转地址：${row.vcJumpUrl} 
                        	</td>
                        	<td> ${row.isort} </td>
                        	<td>
	                        	 #if($row.istate == 1) 
	                        	    	有效 
	                        	 #elseif($row.istate == 2) 
	                        	 	无效 
	                        	 #end
                        	</td>
                        	<td> #if($row.vcChannel)${row.vcChannel}#end </td>
                        	<td> ${row.dtCreateStr} </td>
                        	<td>#if($row.iblankWindow == 1) 
	                        	 是
	                        	#elseif($row.iblankWindow == 2) 
	                        	否
	                        	#end
	                       	</td>
                            <td>
                            <a href="${www}/focus/find?id=${row.id}">修改</a>
                            </td>
                        </tr>
                        #end
                    </tbody></table>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="dataTables_paginate paging_bootstrap">
                            <ul class="pagination">
                                #set($pageRequestURL="${www}/focus?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
                                #paginationHelper($result $pageRequestURL)
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->
