<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li class="active">标的类型列表</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>
	<div class="page-content">
		<div class="page-header">
		    <h1>标的类型列表</h1>
		</div>
		<div class="container-fluid">
		    <div class="dataTables_wrapper">
		        <div class="row">
		         
		        </div>
		        <table class="table table-striped table-bordered table-hover dataTable">
		            <thead>
		            <tr>
		            	<th>标的分类名称</th>
		                <th>标的类型名称</th>
		                <th>加息券是否可用</th>
		                <th>状态</th>
		                <th>操作</th>
		            </tr>
		            </thead>
		            <tbody>
		                #foreach($row in $result.rows)
			                #if(${row.itype}!="0")
			                <tr>
			               		 <td> $!{row.vcClassName} </td>
			                	<td> $!{row.vcTypeName} </td>
			                	<td style="width:120px;"> #if($!{row.iticket}==1) 可用
			                		 #elseif($!{row.iticket}==2) 不可用
			                		 #end
			                	</td>
			                	<td > #if($!{row.istatus}==1) 可用
			                		 #elseif($!{row.istatus}==2) 停用
			                		 #elseif($!{row.istatus}==3) 复核
			                		 #end
			                	</td>
			                    <td><a href="$!{www}/subjectclass/find?id=$!{row.id}" >修改</a>  
			                    #if($!{row.istatus} == 1) | <a  href="$!{www}/subjectclass/delete?id=$!{row.id}" onclick="return checkStatus($!{row.istatus});" >删除</a> |
			                        <a  href="$!{www}/subjectclass/recheck?id=$!{row.id}">复核</a>
			                      #end
			                    </td>
			                </tr>
			                #end
		                #end
		            </tbody>
		        </table>
		        <div class="row">
		            <div class="col-sm-12">
		                <div class="dataTables_paginate paging_bootstrap">
		                    <ul class="pagination">
		                    	#set($pageRequestURL="$!{www}/subjectclass/list?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
		                    	#paginationHelper($result $pageRequestURL)
		                    </ul>
		                </div>
		            </div>
		       </div>
		       
		    </div>
		</div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->

<script type="text/javascript">
			function checkStatus(status){
				if(status == 3){
					alert("该标的已复核无法操作");
					return false;
				}
			}
 </script>

