<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li class="active">SEO推荐管理</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>
	<div class="page-content">
		<div class="page-header">
		    <h1>SEO推荐管理</h1>
		</div>
		<div class="container-fluid">
		    <div class="dataTables_wrapper">
		        <div class="row">
		            <div class="col-sm-11">
		                <form class="form-inline" role="form">
		                    <div class="form-group">
		                        <select  name="iextendPlace" id="iextendPlace">
                                    <option value="">选择推荐位</option>
                                    <option value="1" #if($query.iextendPlace && $query.iextendPlace =='1') selected #end>首页推荐位</option>
                                    <option value="2" #if($query.iextendPlace && $query.iextendPlace =='2') selected #end>注册页宣传位</option>
                                </select>
		                    </div>
		                    <div class="form-group">
		                        <button class="btn btn-xs btn-primary" type="submit">查询</button>
		                    </div>
		                </form>
		            </div>
                    <div class="col-sm-1">
                        <a href="$!{www}/pcextendimage/new" class="btn btn-success btn-xs">添加</a>
                    </div>
		        </div>
		        <table class="table table-striped table-bordered table-hover dataTable">
		            <thead>
		            <tr>
		                <th>编号</th>
		                <th>推荐位</th>
		                <th>别名</th>
		                <th>链接</th>
		                <th>图片</th>
		                <th>状态</th>
		                <th>操作</th>
		            </tr>
		            </thead>
		            <tbody>
		                #foreach($row in $result.rows)
		                <tr>
		                	<td> $!{row.id} </td>
		                	<td> #if($row.iextendPlace==1)首页推荐位 #elseif($row.iextendPlace==2)注册页宣传位#end</td>
		                	<td> $!{row.vcName} </td>
		                	<td> $!{row.vcUrl} </td>
		                	<td> $!{row.vcImageUrl} </td>
		                	<td> #if($row.istate==1)有效 #elseif($row.istate==2)无效#end</td>
		                    <td>
		                    	<a onclick="delcfm()" href="$!{www}/pcextendimage/delete?id=$!{row.id}">删除</a>   ｜
		                    	<a href="$!{www}/pcextendimage/find?id=$!{row.id}">编辑</a>   ｜
		                     	#if($row.isortNo==$maxSort_main && $row.iextendPlace==1)
		                     		<a>已置顶（首页）</a>
		                     	#elseif($row.isortNo==$maxSort_register && $row.iextendPlace==2)
		                     		<a>已置顶（注册页）</a>
		                     	#else
		                     		<a href="$!{www}/pcextendimage/toTop?id=$!{row.id}">置顶</a>
		                     	#end
		                    </td>
		                </tr>
		                #end
		            </tbody>
		        </table>
		        <div class="row">
		            <div class="col-sm-12">
		                <div class="dataTables_paginate paging_bootstrap">
		                    <ul class="pagination">
		                    	#set($pageRequestURL="$!{www}/pcextendimage?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
		                    	#paginationHelper($result $pageRequestURL)
		                    </ul>
		                </div>
		            </div>
		       </div>
		       
		    </div>
		</div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->
#if($request.getParameter("msg"))
	<script type="text/javascript">
		$(function(){
			alert('$!{request.getParameter("msg")}');
		})
	</script>
#end