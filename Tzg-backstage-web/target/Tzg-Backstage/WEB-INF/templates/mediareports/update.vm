<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/mediareports">媒体报道列表</a>
            </li>
            <li class="active">修改媒体报道</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>修改媒体报道</h1>
        </div>
        
        #if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end        
        
        <form id="inputForm" action="${www}/mediareports/update" method="post" class="form-horizontal">
        	<input type="hidden" name="id" id="id" value="$!{mediareports.id}"/>
             <div class="row">
	                <div class="col-xs-12 col-md-8">
	                    <div class="form-group">
	                        <label class="col-md-4 col-sm-2 control-label">媒体logo地址：</label>
	                        <div class="col-md-8 col-sm-8">
	                        	<div class="row">
		                        	<div class="col-md-11">
		                        		<input type="text" class="col-sm-12" id="mediareportsPath" value="$!{mediareports.vcLogoUrl}"  readonly/>
		                        		<input type="hidden" id="vcLogoUrl" name="vcLogoUrl" value="$!{mediareports.vcLogoUrl}">
		                        	</div>
		                        	<div class="col-md-1">
		                        		<button type="button" id="select_mediareports_path_btn" class="btn btn-xs">选择媒体logo</button>
		                        	</div>
		                         </div>	
	                        </div>
	                    </div>
	                </div>
	          </div>
	          <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">已上传的图片：</label>
                        <div class="col-md-8 col-sm-8">
                        	<img src="$!{staticUploadUrl}${mediareports.vcLogoUrl}"  alt="图标" />
                        </div>
                    </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">媒体链接地址：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="text" class="col-sm-12" id="vcUrl" name="vcUrl" value="$!{mediareports.vcUrl}" />
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">顺序：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="number" class="col-sm-12" id="isort" name="isort" value="$!{mediareports.isort}" />
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">状态：</label>
                        <div class="col-md-8 col-sm-8">
                        	<select class="col-sm-12" name="istate">
                                <option value="1" #if($mediareports.istate ==1) selected #end>有效</option>
                                <option value="2" #if($mediareports.istate ==2) selected #end>无效</option>
                            </select>
                        </div>
                    </div>
                </div>
             </div>  
            <div class="clearfix form-actions">
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-sm-offset-4 col-md-9">
           					<button class="btn btn-info" type="submit">
                                <i class="icon-ok bigger-110"></i>提交
                            </button>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn" type="button" onclick="javascript:history.go(-1);">
                                <i class="icon-arrow-left bigger-110"></i>返回
                            </button>
                        </div>
                    </div>
                </div>
            </div>
     </div>
    </form>
</div><!-- /.page-content -->
</div><!-- /.main-content -->

<script src="${www}/js/sea.js" id="seajsnode"></script>
<script type="text/javascript">
seajs.use(['dialog'], function(dialog) {
    var vcLogoUrl = $("#vcLogoUrl");
    var mediareportsPath = $("#mediareportsPath");
    var showDialog = function () {
        dialog.alert({
            title: '媒体报道列表',
            content: '<iframe id="js_selector" frameborder="0" width="800" height="400" src="${www}/uploadfile/filePathList?itype=8"></iframe>',
            ok: function() {
                var checkedRadio = $(":radio:checked", document.getElementById("js_selector").contentDocument);
                if (checkedRadio.size()) {
                    vcLogoUrl.val(checkedRadio.val());
                    mediareportsPath.val(checkedRadio.attr("data-name"));
                }
            }
        });
    };
    mediareportsPath.click(showDialog);
    $("#select_mediareports_path_btn").click(showDialog);
});
</script>
