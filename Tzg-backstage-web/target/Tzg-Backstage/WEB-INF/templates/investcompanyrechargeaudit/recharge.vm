<script src="${www}/js/my97DatePicker/WdatePicker.js"></script>
<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            
            function tijiao(){
            	var numAmount = document.getElementById("numamount");
            	var re2 = /^\d+(\.\d+)?$/;
				if(!re2.test(numAmount.value)){
					alert("请填写非负数");
					numAmount.focus();
					return false;
				}
				var rechargeForm = document.getElementById("rechargeForm");
				rechargeForm.submit();
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>
            	<li class="active">投资公司充值</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>
	<div class="page-content">
		<div class="page-header">
		    <h1>投资公司充值</h1>
		</div>
		<form action="${www}/investcompanyrechargeaudit/rechargeSubmit" method="post" class="form-horizontal" id="rechargeForm">
			<div class="row">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">充值金额：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" name="numamount" value="$!{param.numamount}" id="numamount"/>
                        </div>
                    </div>
               	</div>
       		</div>
       		<div class="clearfix form-actions">
                <div class="col-sm-offset-2 col-md-9">
                    <button class="btn btn-info" type="button" onclick="tijiao()">
                        <i class="icon-ok bigger-110"></i>提交
                    </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		            <button class="btn btn-info" type="button" onclick="javascript:history.go(-1);">
		                <i class="icon-arrow-left bigger-110"></i>返回
		            </button>
                </div>
            </div>
		</form>
	</div>
</div>