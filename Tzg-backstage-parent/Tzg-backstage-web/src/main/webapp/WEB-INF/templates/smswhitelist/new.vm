<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>
		<script type="text/javascript">
		function tijiao(){
    		var vcPhone = document.getElementById("vcPhone");
    		if(vcPhone.value==""){
				alert("手机号码不能为空");
				return false;
				}
    		var inputForm_subject = document.getElementById("inputForm_subject");
    		inputForm_subject.submit();
		}
		</script>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/smswhitelist">短信白名单列表</a>
            </li>
            <li class="active">新增短信白名单</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>新增短信白名单</h1>
        </div>
        <form action="${www}/smswhitelist/save" method="post" class="form-horizontal" id="inputForm_subject">
            <div class="row">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">手机号码：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" id="vcPhone" name="vcPhone" value="$!{param.vcPhone}"/>
                        </div>
                    </div>
                    <div class="red">$!{msg}</div>
               	</div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-sm-offset-2 col-md-9">
                    <button class="btn btn-info" type="button" onclick="tijiao()">
                        <i class="icon-ok bigger-110"></i> 提交
                    </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		            <button class="btn btn-info" type="button" onclick="javascript:history.go(-1);">
		                <i class="icon-arrow-left bigger-110"></i>返回
		            </button>
                </div>
            </div>
</form>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->