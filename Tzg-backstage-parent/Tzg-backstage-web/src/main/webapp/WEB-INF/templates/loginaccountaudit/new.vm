<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
			
			function checkSubmit(){
				var reason = document.getElementById("reason");
				var inputForm_subject = document.getElementById("inputForm_subject");
				inputForm_subject.submit();
			}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/loginaccountaudit">冻结解冻用户列表</a>
            </li>
            <li class="active">冻结解冻用户</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>冻结解冻用户</h1>
        </div>
			#if(${msg})
	     <div>
		     #if(${success})
	    		<li class="text-success">$!{msg}</li>
			 #else
	    		<li class="text-danger">$!{msg}</li>
			 #end    	
		 </div>
	    #end
        <form action="${www}/loginaccountaudit/save" method="post" id="inputForm_subject" class="form-horizontal">
            <div class="row">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">姓名：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" name="id" value="$!{param.vcName}" disabled/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">手机号：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" class="col-sm-12" name="vcPhone" value="$!{param.vcPhone}" disabled/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">执行：</label>
                        <div class="col-md-8 col-sm-8">
                            #if($param.ivalid && $param.ivalid ==1)
                            	<input type="text" class="col-sm-12" value="冻结" disabled>
                            	<input type="hidden" name="iType" value="1">
                            #else
                            	<input type="text" class="col-sm-12" value="解冻" disabled>
                            	<input type="hidden" name="iType" value="2">
                            #end
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">理由：</label>
                        <div class="col-md-8 col-sm-12">
                            <textarea class="col-sm-12" name="vcReason"  id="reason" style="margin: 0px; width: 400px; height: 127px;" value="$!{param.vcReason}"></textarea>
                        </div>
                    </div>
                    <div class="red">$!{msg}</div>
               	</div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-sm-offset-2 col-md-9">
                	<input type="hidden" name="id" value="$!{param.id}">
                    <button class="btn btn-info" type="button" onclick="checkSubmit()">
                        <i class="icon-ok bigger-110"></i> 提交
                    </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		            <button class="btn btn-info" type="button" onclick="javascript:history.go(-1);">
		                <i class="icon-arrow-left bigger-110"></i>返回
		            </button>
                </div>
            </div>
</form>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->
#if($request.getParameter("msg"))
	<script type="text/javascript">
		$(function(){
			alert('$!{request.getParameter("msg")}');
		})
	</script>
#end