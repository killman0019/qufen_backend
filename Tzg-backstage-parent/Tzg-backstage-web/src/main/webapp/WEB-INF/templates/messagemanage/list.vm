<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li class="active">站内信列表</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>
	<div class="page-content">
		<div class="page-header">
		    <h1>站内信列表</h1>
		</div>
			
		<div class="container-fluid">
		
       #if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end		
		
		    <div class="dataTables_wrapper">
		        <div class="row">
		            <div class="col-sm-11">
		                <form class="form-inline" role="form">
		                    <div class="form-group">
		                        <label>标题：</label>
		                        <input type="text" name="vcTitle" value="$!{query.vcTitle}">
		                    </div>
                            <div class="form-group">
                                 <label>接收对象：</label>
                                <select name="itype">
                                	<option value="">全部</option>
	                                <!-- <option value="1" #if($query.itype && $query.itype ==1) selected #end>所有人</option>-->
	                                <option value="2" #if($query.itype && $query.itype ==2) selected #end>投资人</option>
	                                <option value="3" #if($query.itype && $query.itype ==3) selected #end>借款人</option>
	                            </select>
                            </div>
                            <div class="form-group">
                                 <label>类型：</label>
                                <select name="imode">
                                	<option value="">全部</option>
	                                <option value="1" #if($query.imode  && $query.imode ==1) selected #end>系统通知</option>
	                                <option value="2" #if($query.imode  && $query.imode ==2) selected #end>活动公告</option>
	                                <option value="3" #if($query.imode  && $query.imode ==3) selected #end>客户端公告-注意：此类内容请控制住100字以内且不要添加样式，只能编辑文字加换行</option>
	                                
	                            </select>
                            </div>	                            
                            <div class="form-group">
                                 <label>状态：</label>
                                <select name="istate">
                                	<option value="">全部</option>
	                                <option value="1" #if($query.istate  && $query.istate ==1) selected #end>刚录入</option>
	                                <option value="2" #if($query.istate  && $query.istate ==2) selected #end>发布中</option>
	                                <option value="3" #if($query.istate  && $query.istate ==3) selected #end>已发布</option>
	                            </select>
                            </div>	                            		                    
		                    <div class="form-group">
		                        <button class="btn btn-xs btn-primary" type="submit">查询</button>
		                    </div>
		                </form>
		            </div>
                    <div class="col-sm-1">
                        <a href="$!{www}/messagemanage/new" class="btn btn-success btn-xs">添加</a>
                    </div>
		        </div>
		        <table class="table table-striped table-bordered table-hover dataTable">
		            <thead>
		            <tr>
		            	<th>类型</th>
		                <th>标题</th>
		                <th>接收对象</th>
		                <th>发送数量</th>
		                <th>已阅数量</th>
		                <th>状态</th>
		                <th>创建时间</th>
		                <th>发布时间</th>		             
		                <th>操作</th>
		               
		            </tr>
		            </thead>
		            <tbody>
		                #foreach($row in $result.rows)
		                <tr>
		                	<td>
		                	     #if($row.imode ==1) 系统通知
                                 #elseif($row.imode ==2) 活动公告
                                 #end
		                	</td>		                
		                	<td> $!{row.vcTitle} </td>
		                	<td>
		                	     #if($row.itype ==1) 所有人
                                 #elseif($row.itype ==2) 投资人
                                 #elseif($row.itype ==3) 借款人
                                 #end
		                	</td>
		                	<td>$!{row.numSend} </td>
		                	<td>$!{row.numRead} </td>
		                	<td>
		                	     #if($row.istate ==1) 刚录入
                                 #elseif($row.istate ==2) 发布中
                                 #elseif($row.istate ==3) 已发布
                                 #end		                	
							</td>
							<td>$!{row.dtCreateStr}</td>
							<td>$!{row.dtPublishStr}</td>
		                    <td>
		                    	#if($row.istate == 1)
		                    	<a href="$!{www}/messagemanage/find?id=$!{row.id}">修改</a>  
		                     ｜
		                        <a onclick="delcfm()" href="$!{www}/messagemanage/delete?id=$!{row.id}">删除</a>
		                        ｜
		                        <a  href="$!{www}/messagemanage/publish?id=$!{row.id}">发布</a>	                        
		                        #else
		                         <a  href="$!{www}/messagemanage/detail?id=$!{row.id}">详情</a>
		                         #end
		                    </td>
		                </tr>
		                #end
		            </tbody>
		        </table>
		        <div class="row">
		            <div class="col-sm-12">
		                <div class="dataTables_paginate paging_bootstrap">
		                    <ul class="pagination">
		                    	#set($pageRequestURL="$!{www}/messagemanage?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
		                    	#paginationHelper($result $pageRequestURL)
		                    </ul>
		                </div>
		            </div>
		       </div>
		       
		    </div>
		</div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->