<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/subjectclass/list">标的类型列表</a>
            </li>
            <li class="active">新增标的类型</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>新增标的类型</h1>
        </div>
        <form action="${www}/subjectclass/save" method="post" class="form-horizontal" id="inputForm_subject">
        
            <div class="row">
                <div class="col-xs-12 col-md-5">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">标的分类： </label>
                        <div class="col-md-8 col-sm-8">
                        	<select id="iclassType" name="iclassType" >
                        		<option value="">--请选择--</option>
                        		#foreach($row in $result.rows)
                        			<option value="$!{row.iclassType}">$!{row.vcClassName}</option>
                        		#end
                        	</select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">标的类型名称：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="text"  id="vcTypeName" name="vcTypeName"  readonly= "true"  value="$!{param.vcTypeName}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">加息券是否可用：</label>
                        <div class="col-md-8 col-sm-8">
                            <input type="checkbox" value="1" #if($!{param.iticket} ==1) checked #end name="iticket" />
                        </div>
                    </div>
                    <div class="red">$!{msg}</div>
               	</div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-sm-offset-2 col-md-9">
                    <button class="btn btn-info" type="button" onclick="checkSubmit()">
                        <i class="icon-ok bigger-110" ></i> 提交
                    </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		            <button class="btn btn-info" type="button" onclick="javascript:history.go(-1);">
		                <i class="icon-arrow-left bigger-110"></i>返回
		            </button>
                </div>
            </div>
</form>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->
<script type="text/javascript">
function checkSubmit(){
				var iclassType = document.getElementById("iclassType");
				var vcTypeName = document.getElementById("vcTypeName");
				
				if(iclassType.value == ""){
					alert("标的分类不能为空");
					return false;
				}
				if(vcTypeName.value==""){
					alert("标的类型名称不能为空");
					appendAmt.focus();
					return false;
				}
				var inputForm_subject = document.getElementById("inputForm_subject");
				inputForm_subject.submit();
			}
 </script>

