<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="$!{www}/main">主页</a>
            </li>

            <li class="active">客户列表</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>
	<div class="page-content">
		<div class="page-header">
		    <h1>客户列表</h1>
		</div>
		#if(${msg})
	     <div>
		     #if(${success})
	    		<li class="text-success">$!{msg}</li>
			 #else
	    		<li class="text-danger">$!{msg}</li>
			 #end    	
		 </div>
	    #end
		<div class="container-fluid">
		    <div class="dataTables_wrapper">
		        <div class="row">
		            <div class="col-sm-11">
		                <form class="form-inline" role="form">
		                    <div class="form-group">
		                        <label>手机号：</label>
		                        <input type="text" name="vcPhone" value="$!{query.vcPhone}">
		                    </div>
		                    <div class="form-group">
		                        <label>姓名：</label>
		                        <input type="text" name="vcName" value="$!{query.vcName}">
		                    </div>
		                    <div class="form-group">
		                        <label>类型：</label>
		                        <select name="itype">
	                        		<option value="">请选择</option>
		                            <option value="1" #if($query.itype && $query.itype =='1') selected #end>借款人</option>
		                            <option value="2" #if($query.itype && $query.itype =='2') selected #end>投资人</option>
		                            <option value="3" #if($query.itype && $query.itype =='3') selected #end>担保人</option>
		                        	<option value="4" #if($query.itype && $query.itype =='4') selected #end>平台账户</option>
			                		<option value="5" #if($query.itype && $query.itype =='5') selected #end>渠道</option>
		                        </select>
		                    </div>
		                    <div class="form-group">
		                        <button class="btn btn-xs btn-primary" type="submit">查询</button>
		                    </div>
		                </form>
		            </div>
		        </div>
		        <table class="table table-striped table-bordered table-hover dataTable">
		            <thead>
		            <tr>
		                <th>手机号</th>
		                <th>登陆账号</th>
		                <th>邮箱账号</th>
		                <th>姓名</th>
		                <th>类型</th>
		                <th>状态</th>
		                <th>手机认证</th>
		                <th>邮箱认证</th>
		                <th>实名认证</th>
		                <th>创建时间</th>
                        <th>操作</th>
		            </tr>
		            </thead>
		            <tbody>
		                #foreach($row in $result.rows)
		                <tr>
		                	<td> <a href="$!{www}/loginaccount/details?id=$!{row.id}">$!{row.vcPhone} </a></td>
		                	<td> $!{row.vcLoginName} </td>
		                	<td> $!{row.vcEmail} </td>
		                	<td> $!{row.vcName} </td>
		                	<td> 
			                	#if($!{row.itype}==1)借款人
			                	#elseif($!{row.itype}==2)投资人
			                	#elseif($!{row.itype}==3)担保人
			                	#elseif($!{row.itype}==4)平台账户
			                	#elseif($!{row.itype}==5)渠道
			                	#end
		                	</td>
		                	<td>
		                	#if($!{row.ivalid}==1)正常
		                	#else <font color="red">已冻结</font>
		                	#end
							</td>
		                	<td>
			                	#if($!{row.iverifyPhone}==1)已认证
			                	#else未认证 
			                	#end
		                	</td>
		                	<td> 
		                		#if($!{row.iverifyEmail}==1)已认证
			                	#else未认证 
			                	#end
		                	</td>
		                	<td> 
		                		#if($!{row.iverifyIdcard}==1)已认证
			                	#else未认证 
			                	#end
		                	</td>
		                	<td> $!{row.dtCreateStr} </td>
							<td>
								#if($!{row.itype}==2)
									#if($!{row.ivalid}==1)
										<a href="$!{www}/loginaccountaudit/toFrozen?loginAccountId=$!{row.id}&iType=1">冻结</a>
				                	#else
										<a href="$!{www}/loginaccountaudit/toFrozen?loginAccountId=$!{row.id}&iType=2">解冻</a>
				                	#end
			                	#end
                            </td>
		                </tr>
		                #end
		            </tbody>
		        </table>
		        <div class="row">
		            <div class="col-sm-12">
		                <div class="dataTables_paginate paging_bootstrap">
		                    <ul class="pagination">
		                    	#set($pageRequestURL="$!{www}/loginaccount?pageIndex=[PAGINATION_PAGE_INDEX]#if($!{result.queryParameters})&$!{result.queryParameters}#end")
		                    	#paginationHelper($result $pageRequestURL)
		                    </ul>
		                </div>
		            </div>
		       </div>
		       
		    </div>
		</div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->
#if($request.getParameter("msg"))
	<script type="text/javascript">
		$(function(){
			alert('$!{request.getParameter("msg")}');
		})
	</script>
#end