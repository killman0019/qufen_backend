<script type="text/javascript">
function checkSubmit(){
				var appendAmt = document.getElementById("appendAmt");
				if(appendAmt.value == ""){
					alert("追加金额不能为空！");
					appendAmt.focus();
					return false;
				}
				var a = /^[0-9]+([.]{1}[0-9]{1,2})?$/;
				if(!a.test(appendAmt.value)){
					alert("请输入正确的金额！");
					appendAmt.focus();
					return false;
				}
				if(appendAmt.value=="0"){
					alert("请输入正确的金额！不能为0。");
					appendAmt.focus();
					return false;
				}
				var inputForm_subject = document.getElementById("inputForm_subject");
				inputForm_subject.submit();
			}
 </script>
