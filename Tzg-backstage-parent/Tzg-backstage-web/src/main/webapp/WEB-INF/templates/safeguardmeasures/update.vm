<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
  
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="${www}/main">主页</a>
            </li>

            <li>
                <a href="${www}/safeguardmeasures">保障措施列表</a>
            </li>
            <li class="active">新增保障措施</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
						<span class="input-icon">
							<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
							<i class="icon-search nav-search-icon"></i>
						</span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>新增保障措施</h1>
        </div>
        
        #if(${msg})
        	<div>
			#if(${success})
        		<li class="text-success">$!{msg}</li>
   			 #else
        		<li class="text-danger">$!{msg}</li>
   			 #end    	
   			</div>
   		#end        
        
        <form id="inputForm" action="${www}/safeguardmeasures/update" method="post" class="form-horizontal">
            <input type="hidden" name="id" id="id" value="$!{safeguardmeasures.id}"/>
        	<div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">代码：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="text" class="col-sm-12" id="vcCode" name="vcCode" value="$!{safeguardmeasures.vcCode}" />
                        </div>
                    </div>
                </div>
            </div>
        	<div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">名称：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="text" class="col-sm-12" id="vcName" name="vcName" value="$!{safeguardmeasures.vcName}" />
                        </div>
                    </div>
                </div>
             </div>
	        <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">图标路径：</label>
                        <div class="col-md-8 col-sm-8">
                        	<div class="row">
	                        	<div class="col-md-11">
	                        		<input type="text" class="col-sm-12" id="iconPath" value="$!{safeguardmeasures.vcURL}" readonly/>
	                        		<input type="hidden" id="vcURL" name="vcURL" value="$!{safeguardmeasures.vcURL}">
	                        	</div>
	                        	<div class="col-md-1">
	                        		<button type="button" id="select_icon_path_btn" class="btn btn-xs">选择图标路径</button>
	                        	</div>
		                    </div>	
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">顺序：</label>
                        <div class="col-md-8 col-sm-8">
                        	<input type="number" class="col-sm-12" id="iSort" name="iSort" value="$!{safeguardmeasures.iSort}" />
                        </div>
                    </div>
                </div>
             </div> 
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">状态：</label>
                        <div class="col-md-8 col-sm-8">
                        	<select class="col-sm-12" name="iState">
                                <option value="1" #if($safeguardmeasures.iState ==1) selected #end>有效</option>
                                <option value="2" #if($safeguardmeasures.iState ==2) selected #end>无效</option>
                            </select>
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                        <label class="col-md-4 col-sm-2 control-label">已上传的图片：</label>
                        <div class="col-md-8 col-sm-8">
                        	<img src="$!{staticUploadUrl}${safeguardmeasures.vcURL}"  alt="图标" />
                        </div>
                    </div>
                </div>
             </div> 
            <div class="clearfix form-actions">
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-sm-offset-4 col-md-9">
            			<button class="btn btn-info" type="submit">
                                <i class="icon-ok bigger-110"></i>提交
                            </button>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn" type="button" onclick="javascript:history.go(-1);">
                                <i class="icon-arrow-left bigger-110"></i>返回
                            </button>
                        </div>
                    </div>
                </div>
            </div>
    </div>            
    </form>
</div><!-- /.page-content -->
</div><!-- /.main-content -->

<script src="${www}/js/sea.js" id="seajsnode"></script>
<script type="text/javascript">
seajs.use(['dialog'], function(dialog) {
    var vcURL = $("#vcURL");
    var iconPath = $("#iconPath");
    var showDialog = function () {
        dialog.alert({
            title: '保障措施图片列表',
            content: '<iframe id="js_selector" frameborder="0" width="800" height="400" src="${www}/uploadfile/filePathList?itype=4"></iframe>',
            ok: function() {
                var checkedRadio = $(":radio:checked", document.getElementById("js_selector").contentDocument);
                if (checkedRadio.size()) {
                    vcURL.val(checkedRadio.val());
                    iconPath.val(checkedRadio.attr("data-name"));
                }
            }
        });
    };
    iconPath.click(showDialog);
    $("#select_icon_path_btn").click(showDialog);
});
</script>
